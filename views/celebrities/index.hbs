<article class="container">
  <h2>Celebrities</h2>
  <ul class="container">
    {{#each celebrities}}
    <div class="container-spaced">
      <li><a href="celebrities/{{_id}}">{{name}}</a></li>
      <a href="/celebrities/edit/{{this.id}}">Edit</a>
      <form action="/delete/celebrity" method="POST">
        <input type="hidden" name="_id" value="{{_id}}">
        <button type="submit">Delete</button>
      </form>
    </div>
    {{/each}}
  </ul>
  <a href="/">Back to Menu</a>
</article>