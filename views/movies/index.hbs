<h2>Movies</h2>
<ul>
  {{#each movies}}
  <li><a href="movies/{{_id}}">{{title}}</a></li>
  <a href="/movies/edit/{{this.id}}">Edit</a>
  <form action="/delete/movie" method="POST">
    <input type="hidden" name="_id" value="{{_id}}">
    <button type="submit">Delete</button>
  </form>
  {{/each}}
</ul>
<a href="/">Back to Menu</a>